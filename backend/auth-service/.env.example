# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dentamate-auth?retryWrites=true&w=majority
MONGODB_DB_NAME=dentamate-auth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRY=7d
JWT_RESET_PASSWORD_EXPIRY=1h
JWT_EMAIL_VERIFICATION_EXPIRY=24h

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://developers.google.com/oauthplayground
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_FROM=DentaMate <your-email@gmail.com>

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600000

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000

# Frontend URL
FRONTEND_URL=http://localhost:4200
PASSWORD_RESET_URL=http://localhost:4200/reset-password
EMAIL_VERIFICATION_URL=http://localhost:4200/verify-email

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
